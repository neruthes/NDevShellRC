PIDFILE="/run/rsyncd_alt.pid"

function start() {
    sudo rsync --daemon --port 23873 --dparam=pidfile="$PIDFILE"
}
function stop() {
    sudo start-stop-daemon --stop --pidfile "$PIDFILE" --user root --verbose
}
function restart() {
    stop
    start
}
function getpid() {
    sudo cat "$PIDFILE" 2>/dev/null
}
