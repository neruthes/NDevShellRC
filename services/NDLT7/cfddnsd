PIDFILE=/tmp/cfddnsd-$USER.pid
LOGDIR=/tmp/.psman-log-$USER
LOGFILE=$LOGDIR/cfddnsd

function start() {
    mkdir -p $LOGDIR
    daemonize -p "$PIDFILE" -o $LOGFILE -- $HOME/.local/bin/cfddnsd
}
function stop() {
    start-stop-daemon --stop --pidfile "$PIDFILE" --user "$USER" --verbose
}
function restart() {
    stop
    start
}
function getpid() {
    cat "$PIDFILE" 2>/dev/null
}
