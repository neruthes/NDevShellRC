PIDFILE=/run/syscgijs-$USER.pid
LOGDIR=/tmp/.psman-log-$USER
LOGFILE=$LOGDIR/syscgijs

function start() {
    mkdir -p $LOGDIR
    sudo daemonize -p "$PIDFILE" -o $LOGFILE -- /usr/bin/node $HOME/DEV/syscgijs/syscgijs.js
}
function stop() {
    sudo start-stop-daemon --stop --pidfile "$PIDFILE" --user "$USER" --verbose
}
function restart() {
    stop
    start
}
function getpid() {
    cat "$PIDFILE" 2>/dev/null
}
