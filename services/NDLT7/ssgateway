PIDFILE=/run/ss-gost-23080.pid

function start() {
    sudo daemonize -p "$PIDFILE" -- /usr/local/bin/gost -L=ss://chacha20-ietf-poly1305:$(cat $HOME/.config/sskey)@:23080 -F=socks5://10.0.233.3:7891
}
function stop() {
    sudo start-stop-daemon --stop --pidfile "$PIDFILE" --user nobody --verbose
}
function restart() {
    stop
    start
}
function getpid() {
    cat "$PIDFILE" 2>/dev/null
}
