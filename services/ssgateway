PIDFILE=/run/_ssserver-23080.pid

function start() {
    daemonize -- $(which proxychains) -q sudo ss-server -s 0.0.0.0 -p 23080 -k "$(cat /home/neruthes/.config/sskey)" -m chacha20-ietf-poly1305 -a nobody -f "$PIDFILE"
}
function stop() {
    sudo start-stop-daemon --stop --pidfile "$PIDFILE" --user nobody --verbose
}
function restart() {
    stop
    start
}
function getpid() {
    cat "$PIDFILE" 2>/dev/null
}
