#!/bin/bash

echo "Switching native screen"

if [[ `cat /tmp/NDEV_I3WM_NATIVE_SCREEN_ENABLED` = "--off" ]]; then
    echo "--auto" > /tmp/NDEV_I3WM_NATIVE_SCREEN_ENABLED;
else
    echo "--off" > /tmp/NDEV_I3WM_NATIVE_SCREEN_ENABLED;
fi

xrandr --output eDP-1 `cat /tmp/NDEV_I3WM_NATIVE_SCREEN_ENABLED`;
