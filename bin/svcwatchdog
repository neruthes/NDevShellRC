#!/bin/bash

# Run this daemon with OpenRC, instead of psman

UPTIME_SEC="$(cat /proc/uptime | cut -d. -f1)"
if [[ $UPTIME_SEC -lt 120 ]]; then
    sleep 240
fi

while true; do
    LIST="$(rc-status default | grep -E '\[  (crashed|stopped)  \]' | cut -d' ' -f2)"
    for i in $LIST; do
        /sbin/rc-service $i restart &
    done
    sleep 20
done



