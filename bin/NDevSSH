#!/bin/bash

# arg1: Target Device
TargetDevice=$1

if [[ `uname` == "Linux" ]]; then
    DEV_HOME_DIR=/home/neruthes/DEV
else
    DEV_HOME_DIR=/Users/Neruthes/Developer
fi

IPAddr=$(cat ${DEV_HOME_DIR}/NDevMgr/LanDDNS/${TargetDevice}.txt)

if [[ -r "~/.ssh/$(hostname)" ]]; then
    ssh -i "~/.ssh/$(hostname)" neruthes@${IPAddr}
else
    ssh neruthes@${IPAddr}
fi
