#!/bin/bash

# arg1: Target Device
TargetDevice=$1
TargetUsername=$2

if [[ `uname` == "Linux" ]]; then
    DEV_HOME_DIR=/home/neruthes/DEV
else
    DEV_HOME_DIR=/Users/Neruthes/Developer
fi

### Decide Username
if [[ ${TargetDevice:0:4} == "NDPS" ]]; then
    SSHUsername=root
else
    SSHUsername=neruthes
fi

if [ -z "$TargetUsername" ]; then
    SSHUsername="neruthes"
else
    SSHUsername=$TargetUsername
fi

### Decide Address Scope
if [[ ${TargetDevice:0:4} == "NDVS" ]]; then
    AddrScope=wan
else
    AddrScope=lan
fi

# IPAddrFile="${DEV_HOME_DIR}/NDevMgr/LanDDNS/${TargetDevice}.txt"
# if [[ -r $IPAddrFile ]]; then
#     IPAddr=$(cat $IPAddrFile)
# else
#     printf ""
# fi

echo "SSH User:  $SSHUsername"
echo "SSH Host:  $TargetDevice"
echo ""

if [[ -r "~/.ssh/$(hostname)" ]]; then
    ### Prefer the keypair which is named after the hostname
    ssh -i "~/.ssh/$(hostname)" "${SSHUsername}@${TargetDevice}.${AddrScope}.neruthes.xyz"
else
    ssh "${SSHUsername}@${TargetDevice}.${AddrScope}.neruthes.xyz"
fi
